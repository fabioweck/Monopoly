<Window x:Class="Monopoly.View.DieView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Monopoly.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="DieView1"
        Title="Rolling dice..."
        Width="340"
        Height="198"
        mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="lblPlayer"
               Content="Select how to roll dice"
               Grid.Column="0"
               Grid.Row="1"
               Grid.ColumnSpan="7"
               Height="29"
               Margin="42,0,0,0"
               VerticalAlignment="Center" />
        <Label x:Name="lblDiceResult"
               Grid.Column="0"
               Grid.Row="2"
               Grid.ColumnSpan="7"
               Height="29"
               Margin="42,0,0,0"
               VerticalAlignment="Center" />
        <Label x:Name="lblTimer"
               Grid.Column="0"
               Grid.Row="3"
               Grid.ColumnSpan="8"
               Height="29"
               Margin="42,0,0,0"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Width="256">
            <TextBox x:Name="txtNumberOfPlaces"
                     TextWrapping="Wrap"
                     Width="120"
                     Visibility="Hidden" />
        </Label>
        <Button x:Name="btnAuto"
                Content="Auto"
                Grid.Column="1"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Click="btnAuto_Click"></Button>
        <Button x:Name="btnManual"
                Content="Manual"
                Grid.Column="5"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Click="btnManual_Click"></Button>
        <Button x:Name="btnMove"
                Grid.Column="3"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Click="btnMove_Click"
                Visibility="Hidden"></Button>
    </Grid>


</Window>
