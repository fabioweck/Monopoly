<Window
    x:Class="Monopoly.View.DieView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Monopoly.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DieView1"
    Title="Rolling dice..."
    Width="420"
    Height="198"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            x:Name="lblPlayer"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="7"
            Height="29"
            Margin="42,0,0,0"
            VerticalAlignment="Center"
            Content="Select how to roll dice" />
        <Label
            x:Name="lblDiceResult"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="7"
            Height="29"
            Margin="42,0,0,0"
            VerticalAlignment="Center" />
        <Label
            x:Name="lblTimer"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="8"
            Width="256"
            Height="29"
            Margin="42,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <TextBox
                x:Name="txtNumberOfPlaces"
                Width="120"
                TextWrapping="Wrap"
                Visibility="Hidden" 
                PreviewTextInput="txtNumberOfPlaces_PreviewTextInput"
                KeyDown="txtNumberOfPlaces_KeyDown"/>
        </Label>
        <Button
            x:Name="btnAuto"
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Click="btnAuto_Click"
            Content="Auto"
            Width="45"/>
        <Button x:Name="btnDouble"
                Grid.Row="5"
                Grid.Column="3"
                Grid.ColumnSpan="2"
                Click="btnDouble_Click"
                Content="Double"
                Width="45" />
        <Button
            x:Name="btnManual"
            Grid.Row="5"
            Grid.Column="5"
            Grid.ColumnSpan="2"
            Click="btnManual_Click"
            Content="Manual"
            Width="45" />
        <Button
            x:Name="btnMove"
            Grid.Row="5"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Click="btnMove_Click"
            Visibility="Hidden" />
    </Grid>


</Window>
